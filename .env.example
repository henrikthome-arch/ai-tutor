# AI Tutor Admin Dashboard Environment Configuration
# Copy this file to .env and change the values for production

# =============================================================================
# ADMIN CREDENTIALS (CHANGE THESE!)
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_very_long_random_secret_key_here_replace_this_with_actual_random_key

# Environment: development or production
FLASK_ENV=development

# Server port (default: 5000)
PORT=5000

# =============================================================================
# PRODUCTION SECURITY RECOMMENDATIONS
# =============================================================================
# 1. Change ADMIN_USERNAME to something other than "admin"
# 2. Use a strong password for ADMIN_PASSWORD (12+ characters, mixed case, numbers, symbols)
# 3. Generate a secure FLASK_SECRET_KEY using: python -c "import secrets; print(secrets.token_hex(32))"
# 4. Set FLASK_ENV=production for production deployment
# 5. Use HTTPS in production
# 6. Set up proper firewall rules
# 7. Enable logging and monitoring

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# Default AI provider: openai or anthropic
AI_PROVIDER=openai

# Cost and safety limits
DAILY_COST_LIMIT_USD=10.0
AI_MAX_RETRIES=2

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=o3
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=60

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=2000
ANTHROPIC_TEMPERATURE=0.3
ANTHROPIC_TIMEOUT=30

# =============================================================================
# AI PROVIDER SECURITY NOTES
# =============================================================================
# 1. NEVER commit real API keys to version control
# 2. For testing: Copy this file to .env and add your real API keys
# 3. For production: Set these as environment variables on your hosting platform
# 4. See API_KEY_SECURITY_GUIDE.md for detailed security instructions
# 5. Start with one provider (OpenAI or Anthropic) - you don't need both
# 6. Monitor your usage and costs through the provider's dashboard

